<h1>Listing answer_choices</h1>

<table>
  <tr>
    <th>Choice text</th>
    <th>Question</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @answer_choices.each do |answer_choice| %>
  <tr>
    <td><%= answer_choice.choice_text %></td>
    <td><%= answer_choice.question %></td>
    <td><%= link_to 'Show', answer_choice %></td>
    <td><%= link_to 'Edit', edit_answer_choice_path(answer_choice) %></td>
    <td><%= link_to 'Destroy', answer_choice, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

